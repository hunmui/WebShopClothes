
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/styles/login.css">
</head>
<body>
    <div class="center">
        <h1>Đăng ký</h1>
        <form name="login" onsubmit="validateForm()" action="./index.html">
            <div class="txt_field">
                <input name="sdt" type="text" required>
                <span></span>
                <label>Số điện thoại</label>
            </div>
            <div class="txt_field">
                <input name="email" type="text" required>
                <span></span>
                <label>Email</label>
            </div>
            <div class="txt_field">
                <input name="name" type="text" required>
                <span></span>
                <label>Tên</label>
            </div>
            <div class="txt_field">
                <input name="password" type="password" required>
                <span></span>
                <label>Mật khẩu</label>
            </div>
            <input type="submit" value="Đăng ký">
            <div class="signup_link">
                <a href="@Url.Action("SignIn")">Quay lại</a>
            </div>
        </form>
    </div>
    <script>
        function validateForm() {
            alert("Đăng ký thành công");
            return true
        }
    </script>
</body>
</html>

